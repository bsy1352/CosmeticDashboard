@{ 
    ViewData["Title"] = "회원가입";
}
@model CosmeticDashboard.Models.User

<h2>회원가입</h2>

<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label>사용자 ID  <span asp-validation-for="UserId" class="text-danger"></span></label>
        <input type="text" class="form-control w-25" asp-for="UserId" placeholder="사용자 ID 입력" />
        
    </div>
    
    <div class="form-group">
        <label>사용자 비밀번호  <span asp-validation-for="UserPassword" class="text-danger"></span></label>
        <input type="text" class="form-control w-25" asp-for="UserPassword" placeholder="사용자 비밀번호 입력" />
        
    </div>
    
    <div class="form-group">
        <label>사용자 이름  <span asp-validation-for="UserName" class="text-danger"></span></label>
        <input type="text" class="form-control w-25" asp-for="UserName" placeholder="사용자 이름 입력" />
        
    </div>
    

    <div class="form-group">
        <button type="submit" class="btn btn-primary">등록</button>
        <a class="btn btn-warning" href="#">취소</a>
    </div>
</form>